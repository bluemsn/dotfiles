[user]
	name = Eduan Lavaque
	email = eduan@snapsimpletech.com
[core]
	editor = mvim -f
	autocrlf = input
[color]
	ui = true
[commit]
	template = /Users/eduan/.gitmessage.txt
[credential]
	helper = osxkeychain
[alias]
	logg = log --graph --decorate --oneline --abbrev-commit --all
	fshow = ! sh -c 'git show --pretty="format:" --name-only $1 | grep -v "^$" | uniq | sed -e "s#^#`git rev-parse --show-toplevel`/#"' -
	vim = ! sh -c 'vim `git fshow $1`' -
	edit = ! sh -c '$EDITOR `git fshow $1`' -
