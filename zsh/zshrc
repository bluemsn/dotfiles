# Load Git prompt
source ~/.zsh/git-prompt/zshrc.sh

# Initialize colors
autoload -U colors && colors

# Allow for functions in the prompt
setopt PROMPT_SUBST

# Setting my preferred default editor
EDITOR=vim
VISUAL=mvim
export EDITOR VISUAL

# Make 'ls' do lotsa stuff
alias ls="ls -la -Gp -F"

# Make 'gvim' not open a new MacVim window
alias gvim="mvim --remote-silent"

# Make 'reload!' source the .zshrc file
alias reload!="source ~/.zshrc"

# Enable loading of MySQL
export PATH="/usr/local/mysql/bin:$PATH"

# Set the prompt
PROMPT=$'%{${fg[yellow]}%}[%T] %{${fg[cyan]}%}%~%{${fg[default]}%}$(git_super_status)%{${fg[default]}%} >>> '
# Set the right side of my prompt
RPROMPT=$'%{${fg[default]}%}[%n@%m]'

# Set history options
HISTSIZE=1000
SAVEHIST=1000
HISTFILE=~/.history
export HIST_IGNORE_ALL_DUPS
